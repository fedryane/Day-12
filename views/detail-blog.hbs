<html lang="en">
  <head>
    <title>detail-project</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="../public/detail-blog.css" />
    <link rel="stylesheet" href="../public/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet" />

  </head>
  <body>
    <!--navbar-->
    <nav>
      <div class="nav-left">
        <img src="../public/brandred.png" alt="logo" />
        <ul>
          <li>
            <a href="/" id="homepage">Home</a>
          </li>
          <li>
            <a href="/add-blog">My Project</a>
          </li>
        </ul>
      </div>

      <div class="nav-right">
        <a href="/register" class="register">Register</a>
        <a href="/login" class="login">Login</a>
        <a href="/form" class="form">Contact Me</a>
      </div>
    </nav>

    <!--container-->
    {{#each blogs}}
      <div class="detail-container">
        <h1>{{this.projectName}}</h1>
        <div class="content">
          <div class="left-content">
            <img src="/uploads/{{this.image}}" alt="map" />
          </div>
          <div class="right-content">
            <div class="duration">
              <h3 style="margin: 0px 0px 17px 0px;">duration</h3>
              <div class="date-limit">
                <i class="fa-solid fa-calendar-days"></i>
                <p>({{this.startDate}}) - ({{this.endDate}})</p>
              </div>
              <div class="time-limit">
                <i class="fa-solid fa-clock"></i>
                <p>{{this.duration}}</p>
              </div>
            </div>
            <h3 style="margin: 10px 0px 10px 0px;">Technologies</h3>
            <div class="technologies">
              <div class="tech-kiri">
                <div class="react">
                  {{#if reactjs}}
                    <i class="fa-brands fa-react"></i>
                    <p>React Js</p>
                  {{/if}}
                </div>
                <div class="node">
                  {{#if nodejs}}
                    <i class="fa-brands fa-node"></i>
                    <p>node Js</p>
                  {{/if}}
                </div>
              </div>
              <div class="tech-kanan">
                <div class="java">
                  {{#if java}}
                    <i class="fa-brands fa-java"></i>
                    <p>Java</p>
                  {{/if}}
                </div>
                <div class="python">
                  {{#if python}}
                    <i class="fa-brands fa-python"></i>
                    <p>Python</p>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!--paragraf-->
        <div class="paragraf">
          <p>{{this.description}}</p>
        </div>
      </div>
    {{/each}}

  </body>
</html>